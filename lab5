/*
//Zadanie 3

#include <iostream>
#include <time.h>
using namespace std;


int ciag (int n)
{
  if (n == 0)
    return 0;
  if (n < 3)
    return 1;
  return ciag (n - 2) + ciag (n - 1);
}

int main ()
{
  int n;
  cout << "Ciag Fibanaccego odpowiednio dla wartosci:  " << endl;
  for (int i = 0; i < 10; i++)
    {
      cout << i << " ma wartosc: " << ciag (i) << endl;
    }
  return 0;
}
